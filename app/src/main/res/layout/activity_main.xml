<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xgh.weatherforecast.MainActivity">

    <RelativeLayout
        android:layout_weight="11"
        android:background="#f90404"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/imageButton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@mipmap/title_update"
            android:layout_alignParentRight="true" />

        <TextView

            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/imageButton3"
            android:text="天气预报"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageButton3" />

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/imageButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:background="@null"
            android:src="@mipmap/title_city"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="29dp"
            android:layout_toStartOf="@+id/imageButton2"
            android:background="@null"
            android:src="@mipmap/title_share"
            android:layout_marginRight="29dp"
            android:layout_toLeftOf="@+id/imageButton2" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="26dp"
            android:layout_toStartOf="@+id/imageButton"
            android:background="@null"
            android:src="@mipmap/base_action_bar_action_city"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@+id/imageButton" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/biz_plugin_weather_shenzhen_bg">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="30dp"
            android:text="南京"
            android:textColor="#fff"
            android:textSize="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="29dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="18dp"
            android:text="20:41发布"
            android:textColor="#fff"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginLeft="18dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="湿度：71%"
            android:textColor="#fff"
            android:layout_alignRight="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:src="@mipmap/biz_plugin_weather_0_50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/imageView"
            android:text="PM2.5"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:text="22"
            android:textColor="#fff"
            android:textSize="40dp"
            android:layout_alignRight="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/textView4"
            android:text="优"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView7"
            android:layout_toStartOf="@+id/textView5"
            android:src="@mipmap/biz_plugin_weather_qing"
            android:layout_toLeftOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:text="阴"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/textView10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView11"
            android:text="风力2级"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:text="22c~29c"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginTop="28dp"
            android:layout_toStartOf="@+id/textView7"
            android:text="6日星期4"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/textView7" />

        <android.support.v4.view.ViewPager

            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <LinearLayout



        android:id="@+id/layout_dot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>


</LinearLayout>
